doctype html
html
  head
    title homepage
    // Latest compiled and minified CSS
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
    // jQuery library
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')
    // Latest compiled JavaScript
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.4.1/jspdf.debug.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.4.1/jspdf.min.js')
  body(style='background-color: #FFE4C4 ')
    center
      label(style='color:Magenta ; font-size: 30px') STUDENT SUGGESTION/COMPLAINT FORM 
    form.container(style='background-color: #00FFFF; padding: 10px',method='post',action='/SuggestionForm')
      br
      label College
      select(name='College').form-control
        option(value='AEC') Aditya Engineering College
        option(value='ACET') Aditya College of Engineering & Technology
        option(value='ACE') Aditya College of Engineering 
      br
      label Year
      select(name='Year').form-control
        option(value='I') I
        option(value='II') II
        option(value='III') III
        option(value='IV') IV
      br
      label Department
      select(name='Department').form-control
        option(value='IT') IT
        option(value='CSE') CSE
        option(value='MECH') MECH
        option(value='EEE') EEE
        option(value='ECE') ECE
      br
      label Section
      select(name='Section').form-control
        option(value='A') A
        option(value='B') B
        option(value='C') C
        option(value='D') D
      br
      label Complaint
      br
      textarea(rows="10" cols="80" placeholder="Enter your Suggestion/Complaint here" name="Complaint")
      br
      button.btn.btn-warning(type='submit', style='color:black')  submit 
      |&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
     
